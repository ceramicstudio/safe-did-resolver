{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["es6", "dom", "esnext"],
    "target": "ES2020",
    "outDir": "lib",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "importHelpers": true,
    "resolveJsonModule": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
